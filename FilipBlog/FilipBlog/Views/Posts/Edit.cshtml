            @Html.EditorFor(model => model.DateOfModification, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateOfModification, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.AuthorRefId)
    @Html.HiddenFor(model => model.DateOfCreation)
    @Html.HiddenFor(model => model.DateOfModification, new { Value = DateTime.Now })
    @Html.HiddenFor(model => model.IsFlagged)



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

