        <dt>
            @Html.DisplayNameFor(model => model.Author.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Categories)
        </dt>
        <dd>
            <ul>
                @foreach (var category in Model.Categories) {
                    <li>@Html.DisplayFor(item => category.Name)</li>
                }
            </ul>
        </dd>

        <dd>
            <div class="col-md-3">
                @foreach (var ImageUrl in Model.ImageURLs) {
                    <img class="img-responsive" src=@Html.DisplayFor(item=>ImageUrl.URL)>
                }
            </div>
        </dd>

        <h4>Comments:</h4>
        <dd>
            <ul>
                @foreach (var comment in Model.Comments) {
                    <li>@Html.DisplayFor(item => comment.Content)</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
